                <TextView
                    android:id="@+id/textView61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mini_margin"
                    android:text="@string/charisma_full"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBox8"
                    app:layout_constraintStart_toEndOf="@+id/checkBox8"
                    app:layout_constraintTop_toTopOf="@+id/checkBox8" />

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mini_margin"
                    android:text="00"
                    app:layout_constraintBottom_toBottomOf="@+id/textView61"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView55"
                    app:layout_constraintTop_toTopOf="@+id/textView61"
