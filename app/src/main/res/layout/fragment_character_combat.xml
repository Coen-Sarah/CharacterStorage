            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:text="Death Saves"
                android:textSize="@dimen/standard_large_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/HPLabel2" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:text="Saving Throws"
                android:textSize="@dimen/standard_large_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView41" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/attacksRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/standard_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView67" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:text="Temp HP"
                app:layout_constraintStart_toStartOf="@+id/HPLabel"
                app:layout_constraintTop_toBottomOf="@+id/HPLabel" />

            <TextView
                android:id="@+id/HPLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:text="HP"
                app:layout_constraintBottom_toBottomOf="@+id/currentHP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/currentHP" />

            <TextView
                android:id="@+id/currentHitDice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mini_margin"
                android:layout_marginStart="@dimen/standard_margin"
                android:text="00d00"
                android:textSize="@dimen/standard_text"
                app:layout_constraintStart_toEndOf="@+id/HPLabel2"
                app:layout_constraintTop_toTopOf="@+id/HPLabel2" />

            <TextView
                android:id="@+id/maxHitDice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mini_margin"
                android:text="00d00"
                android:textSize="@dimen/standard_text"
                app:layout_constraintStart_toEndOf="@+id/ofLabel2"
                app:layout_constraintTop_toTopOf="@+id/ofLabel2" />

            <TextView
                android:id="@+id/ofLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mini_margin"
                android:text="/"
                android:textSize="@dimen/standard_text"
                app:layout_constraintStart_toEndOf="@+id/currentHitDice"
                app:layout_constraintTop_toTopOf="@+id/currentHitDice" />

            <TextView
                android:id="@+id/HPLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/small_margin"
                android:text="Hit Dice"
                app:layout_constraintStart_toStartOf="@+id/textView36"
                app:layout_constraintTop_toBottomOf="@+id/textView36" />

            <TextView
                android:id="@+id/currentHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mini_margin"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="00"
                android:textSize="@dimen/medium_text"
                app:layout_constraintEnd_toStartOf="@+id/ofLabel"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/maxHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="@dimen/medium_text"
                app:layout_constraintEnd_toEndOf="@+id/tempHP"
                app:layout_constraintTop_toTopOf="@+id/ofLabel" />

            <TextView
                android:id="@+id/ofLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mini_margin"
                android:text="/"
                android:textSize="@dimen/medium_text"
                app:layout_constraintEnd_toStartOf="@+id/maxHP"
                app:layout_constraintTop_toTopOf="@+id/currentHP" />

            <TextView
                android:id="@+id/tempHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                app:layout_constraintBottom_toBottomOf="@+id/textView36"
                app:layout_constraintEnd_toEndOf="@+id/maxHitDice"
                app:layout_constraintTop_toTopOf="@+id/textView36" />

            <TextView
                android:id="@+id/initiative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="@dimen/medium_text"
                app:layout_constraintEnd_toEndOf="@+id/textView32"
                app:layout_constraintStart_toStartOf="@+id/textView32"
                app:layout_constraintTop_toTopOf="@+id/armorClass" />

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="@dimen/medium_text"
                app:layout_constraintEnd_toEndOf="@+id/textView33"
                app:layout_constraintStart_toStartOf="@+id/textView33"
                app:layout_constraintTop_toTopOf="@+id/initiative" />

            <TextView
                android:id="@+id/armorClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="@dimen/medium_text"
                app:layout_constraintEnd_toEndOf="@+id/textView31"
                app:layout_constraintStart_toStartOf="@+id/textView31"
                app:layout_constraintTop_toTopOf="@+id/currentHP" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                app:layout_constraintEnd_toStartOf="@+id/textView32"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tempHP"
                app:layout_constraintTop_toTopOf="@+id/tempHP" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView32"
                app:layout_constraintTop_toTopOf="@+id/textView32" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initiative"
                app:layout_constraintEnd_toStartOf="@+id/textView33"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView31"
                app:layout_constraintTop_toTopOf="@+id/textView31" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attacks"
                android:textSize="@dimen/medium_text"
                app:layout_constraintStart_toStartOf="@+id/textView41"
                app:layout_constraintTop_toBottomOf="@+id/failCheck1" />

            <CheckBox
                android:id="@+id/successCheck3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:layout_constraintStart_toEndOf="@+id/successCheck2"
                app:layout_constraintTop_toTopOf="@+id/successCheck2" />

            <CheckBox
                android:id="@+id/successCheck1"
                android:layout_width="36dp"
                android:layout_height="36dp"
