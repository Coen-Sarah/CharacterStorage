                <CheckBox
                    android:id="@+id/checkBox13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/checkBox12"
                    app:layout_constraintStart_toStartOf="@+id/checkBox12"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    app:layout_constraintBottom_toBottomOf="@+id/textView59"
                    app:layout_constraintEnd_toEndOf="@+id/textView60"
                    app:layout_constraintTop_toTopOf="@+id/textView59" />

                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strength_full"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBox13"
                    app:layout_constraintStart_toStartOf="@+id/textView57"
                    app:layout_constraintTop_toTopOf="@+id/checkBox13" />

                <TextView
                    android:id="@+id/textView53"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/intelligence_full"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBox10"
                    app:layout_constraintStart_toStartOf="@+id/textView50"
                    app:layout_constraintTop_toTopOf="@+id/checkBox10" />

                <CheckBox
                    android:id="@+id/checkBox12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/checkBox11"
                    app:layout_constraintStart_toStartOf="@+id/checkBox11"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox13" />

                <TextView
                    android:id="@+id/textView57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dexterity"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBox12"
                    app:layout_constraintStart_toStartOf="@+id/textView55"
                    app:layout_constraintTop_toTopOf="@+id/checkBox12" />

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    app:layout_constraintBottom_toBottomOf="@+id/textView57"
                    app:layout_constraintEnd_toEndOf="@+id/textView58"
                    app:layout_constraintTop_toTopOf="@+id/textView57" />

                <CheckBox
                    android:id="@+id/checkBox11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/checkBox10"
                    app:layout_constraintStart_toStartOf="@+id/checkBox10"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox12" />

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Constitution"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBox11"
                    app:layout_constraintStart_toStartOf="@+id/textView53"
                    app:layout_constraintTop_toTopOf="@+id/checkBox11" />

                <TextView
                    android:id="@+id/textView58"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    app:layout_constraintBottom_toBottomOf="@+id/textView55"
                    app:layout_constraintEnd_toEndOf="@+id/textView56"
                    app:layout_constraintTop_toTopOf="@+id/textView55" />

                <CheckBox
                    android:id="@+id/checkBox10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/checkBox9"
                    app:layout_constraintStart_toStartOf="@+id/checkBox9"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox11" />

                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    app:layout_constraintBottom_toBottomOf="@+id/textView53"
                    app:layout_constraintEnd_toEndOf="@+id/textView54"
                    app:layout_constraintTop_toTopOf="@+id/textView53" />

                <CheckBox
                    android:id="@+id/checkBox9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/checkBox8"
                    app:layout_constraintStart_toStartOf="@+id/checkBox8"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox10" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wisdom_full"
